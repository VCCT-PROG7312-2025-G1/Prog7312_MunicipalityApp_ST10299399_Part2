@model Prog7312_MunicipalityApp_ST10299399.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Local Events and Announcements";
}


<h1 class="mb-4">Local Events and Announcements</h1>

<div class="alert alert-info" role="alert">
    <strong>Quick Announcements (Queue): </strong>

    @if (Model.QuickAnnouncements.Any())
    {
        <span>@Model.QuickAnnouncements.Count announcement available</span>
        <ul>
            @foreach (var announcement in Model.QuickAnnouncements)
            {
                <li><small>@announcement.Title</small></li>
            }
        </ul>
    
        
    }
    else
    {
        <span>No announcements at the moment.</span>
    }
</div>

<hr />

<div class="mb-4">
    <a asp-controller="Event" asp-action="Recommendations" class="btn btn-primary">
        View Recommended Events
    </a>
</div>

<hr />

<form asp-controller="Event" asp-action="Index" method="get" class="mb-5">
    <div class="row">
        <div class="col-md-4">
            <select name="category" class="form-control">
                <option value="">All Categories</option>
                @foreach (var category in Model.AllCategories)
                {
                    <option value="@category" selected="@(Model.SelectedCategory == category)">@category</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-success w-100">Search Events</button>
        </div>
    </div>
</form>

<h2>Upcoming Events</h2>
@if (Model.SearchResults.Any())
{
    @foreach ( var dateGroup in Model.EventsByDate)
    {
        var relevantEvents = dateGroup.Value.Where(e => Model.SearchResults.Contains(e)).ToList();

        if (relevantEvents.Any())
        {
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">@dateGroup.Key.ToLongDateString()</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var eventItem in relevantEvents)
                    {
                        <li class="list-group-item">
                            <h6 class="mb-1">@eventItem.Title</h6>
                            <p class="mb-1">Category: <span class="badge bg-secondary">@eventItem.Category</span></p>
                            <p class="mb-1">Location: @eventItem.Location</p>
                            <p class="mb-1">@eventItem.Description</p>
                            
                        </li>
                    }
                </ul>
            </div>
        }
    }

}
else
{
    <div class="alert alert-warning" role="alert">
        No events found matching your criteria.
    </div>
}
